{
	"extends": [ "plugin:@wordpress/eslint-plugin/recommended" ],
	"rules": {
		"complexity": [
			"error",
			10
		],
		"max-depth": [
			"error",
			2
		],
		"no-else-return": [
			"error",
			{
				"allowElseIf": false
			}
		],
		"no-useless-return": [
			"error"
		],
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "^_$",
				"varsIgnorePattern": "^_$"
			}
		]
	}
}
