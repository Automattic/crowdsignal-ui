{
  "name": "Crowdsignal",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "dependencies": {
    "@emotion/cache": "^10.0.29",
    "@emotion/core": "^10.1.1",
    "@emotion/styled": "^10.0.27"
  },
  "devDependencies": {
    "@automattic/calypso-build": "^7.0.0",
    "@storybook/builder-webpack5": "^6.3.0",
    "@storybook/manager-webpack5": "^6.3.0",
    "@storybook/source-loader": "^6.3.0",
    "@storybook/react": "^6.3.0",
    "@wordpress/scripts": "^16.1.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "webpack": "^5.37.1"
  },
  "scripts": {
    "check-licenses": "wp-scripts check-licenses --prod --gpl2",
    "format": "wp-scripts format",
    "lint:js": "wp-scripts lint-js",
    "lint:pkg-json": "wp-scripts lint-pkg-json",
    "storybook": "start-storybook -p 8000",
    "postinstall": "node ./node_modules/husky/lib/bin install"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:js"
    ],
    "packages/*/package.json": [
      "yarn lint:pkg-json",
      "yarn check-licenses"
    ]
  }
}
